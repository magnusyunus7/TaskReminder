<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/buttonViewTasks"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/qilka"
        android:text="View Task(s)"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/qilka"
        android:text="Add Task"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonReturnToMainMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewTasks"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonReturnToMainMenu"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/qilka"
        android:text="Return to Main Menu"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddTask" />
</androidx.constraintlayout.widget.ConstraintLayout>